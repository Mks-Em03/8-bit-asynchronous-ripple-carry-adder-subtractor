<script>
const rcaBar = document.getElementById('rcabar');
const claBar = document.getElementById('clabar');
const go = document.getElementById('go');

function animateBar(el, ms){
  el.style.transition = 'none'; el.style.width = '0';
  requestAnimationFrame(()=>{
    el.style.transition = `width ${ms}ms linear`;
    el.style.width = '100%';
  });
}

go.onclick = ()=>{
  // naive visualization: RCA ~ 8T; CLA ~ 4T + small group carry
  animateBar(rcaBar, 1600); // longer
  animateBar(claBar, 700);  // shorter
};
</script>
